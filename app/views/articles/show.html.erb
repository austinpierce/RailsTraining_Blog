<h2>
<p>
  <strong>Title:</strong>
  <%= @article.title %> 
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
</h2>
<h3>Comments</h3>
<%= render @article.comments %>

<h3>Add a comment:</h3>
<%= render 'comments/form' %>

<%= link_to 'Back to all', articles_path %> |
<%= link_to 'Edit Article', edit_article_path %> |
<%= link_to 'Destroy', article_path(@article),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>

